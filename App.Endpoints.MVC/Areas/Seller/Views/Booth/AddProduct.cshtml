@using App.Endpoints.MVC.Areas.Seller.Models;
@model AddProductViewModel;
@{
    var photopath = "~/images/" + Model.imagepath;
}

<br />
<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">اضافه کردن کالا</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>


<div class="mt-6">
    <form method="post" class="m-8 mt-10" enctype="multipart/form-data" style="border:solid gray 2px padding:20px">
        <input hidden asp-for="productId" />
        <input type="hidden"  asp-for="ImageId" />
        <div class="form-group row mb-2 ">
            <label class="col-sm-2 col-form-label ">
                نام کالا
            </label>
            <div class="col-sm-8">
                <input disabled asp-for="productName" class="form-control " value="@Model.productName" placeholder="Name" />
            </div>
        </div>
        <div class="form-group row mb-2 ">
            <label class="col-sm-2 col-form-label">
                مقدار
            </label>
            <div class="col-sm-8">
                <input asp-for="quantity" class="form-control" placeholder="Barcode" />
            </div>
        </div>
        <div class="form-group row mb-2  ">
            <label class="col-sm-2 col-form-label">
                قیمت
            </label>
            <div class="col-sm-8">
                <input type="number" asp-for="price" class="form-control" placeholder="Price" />
            </div>
        </div>
      
     
        <div class="form-group row mb-2  ">
            <label class="col-sm-2 col-form-label">
                تغییر عکس
            </label>
            <div class="col-sm-8">
                <div class="custom-file">
                    <input type="file" name="photo" class="custom-file-input form-control" />

                </div>
            </div>
        </div>

        <div class="form-group row col-sm-4 offset-4">
            <img class="card-img-top imageThumbnail" src="@photopath" asp-append-version="true" />
        </div>
        <div class="form-group row mb-2 ">
            <label class="col-sm-2 col-form-label">انتخاب نوع فروش</label>

            <div class="checkbox">
                <div class="col-sm-8">
                    <input asp-for="IsBid" type="checkbox">مزایده ای است؟
                </div>
            </div>


        </div>
     
        <div class="form-group row mb-2">

            <div class="col-sm-8">
                <input type="submit" value="اضافه کردن کالا" class="btn btn-primary">
                <a class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
</div>